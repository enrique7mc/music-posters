# Spotify API Credentials
SPOTIFY_CLIENT_ID=your_spotify_client_id
SPOTIFY_CLIENT_SECRET=your_spotify_client_secret
SPOTIFY_REDIRECT_URI=http://localhost:3000/api/auth/spotify/callback

# Apple Music API Credentials (from Apple Developer Portal)
# Get credentials from: https://developer.apple.com/account/resources/authkeys/list
APPLE_MUSIC_TEAM_ID=your_apple_team_id
APPLE_MUSIC_KEY_ID=your_apple_music_key_id
# For the private key, paste the full PEM content with \n for newlines:
# e.g., "-----BEGIN PRIVATE KEY-----\nMIGT...\n-----END PRIVATE KEY-----"
APPLE_MUSIC_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\n...\n-----END PRIVATE KEY-----"

# Image Analysis Provider (choose one: 'vision', 'gemini', or 'hybrid')
# - 'vision': Traditional OCR with heuristic filtering (no ranking)
# - 'gemini': AI vision analysis with intelligent ranking (may miss small text)
# - 'hybrid': Best of both - OCR + AI ranking (RECOMMENDED, requires both APIs)
IMAGE_ANALYSIS_PROVIDER=hybrid

# Development: Use mock data instead of real API calls (set to 'true' to enable)
USE_MOCK_DATA=false

# Google Cloud Vision API (required when IMAGE_ANALYSIS_PROVIDER='vision' or 'hybrid')
GOOGLE_APPLICATION_CREDENTIALS=./google-credentials.json

# Google Gemini API (required when IMAGE_ANALYSIS_PROVIDER='gemini' or 'hybrid')
GEMINI_API_KEY=your_gemini_api_key_from_ai_google_dev

# Next.js
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=generate_a_random_secret_here
